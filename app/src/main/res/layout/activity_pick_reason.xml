<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.e134292.downtimeCapture.pickReasonActivity"
    android:orientation="vertical"
    android:background="#1e000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_downtime_reason"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dtButtonOne"
        android:layout_marginTop="10dp"
        android:onClick="buttonOnePress"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dtButtonTwo"
        android:layout_marginTop="10dp"
        android:onClick="buttonTwoPress"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dtButtonThree"
        android:layout_marginTop="10dp"
        android:onClick="buttonThreePress"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dtButtonFour"
        android:layout_marginTop="10dp"
        android:onClick="buttonFourPress"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dtButtonFive"
        android:layout_marginTop="10dp"
        android:onClick="buttonFivePress"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dtButtonSix"
        android:layout_marginTop="10dp"
        android:onClick="buttonSixPress"
        android:background="#FFFFFF" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/reasonET"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:hint="Enter Other Downtime Reason"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:background="@drawable/edit_text_style"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/user_entered_reason"
        android:id="@+id/doneButton"
        android:layout_gravity="center_horizontal"
        android:onClick="nextDowntime"
        android:background="#FFFFFF"
        android:layout_marginTop="15dp"
        android:textSize="16dp" />

</LinearLayout>
